		"gulp-plumber": "^1.2.1",
		"gulp-rename": "^2.0.0",
		"gulp-replace": "^1.1.4",
		"gulp-size": "^5.0.0",
		"gulp-svg-sprite": "^2.0.3",
		"gulp-typograf": "^4.1.0",
